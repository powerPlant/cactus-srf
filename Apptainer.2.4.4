Bootstrap: docker
From: quay.io/comparative-genomics-toolkit/cactus:v2.4.4

%labels
Maintainer ben.warren@plantandfood.co.nz
Version 2.4.4

%environment
export PATH=/home/cactus/cactus_env/bin:/home/cactus/bin:$PATH

%runscript
if [ -x /home/cactus/cactus_env/bin/$APPTAINER_NAME || -x /home/cactus/bin/$APPTAINER_NAME ]; then
    exec $APPTAINER_NAME "$@"
else
  /bin/echo -e "This Apptainer image cannot provide a single entrypoint. Please use \"apptainer exec $APPTAINER_NAME <cmd>\", where <cmd> is one of the following:\n"
  exec ls /home/cactus/cactus_env/bin /home/cactus/bin
fi
